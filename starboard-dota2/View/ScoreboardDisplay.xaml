<Window x:Class="Starboard.View.ScoreboardDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ScoreboardDisplay"
        AllowsTransparency="True" 
        Topmost="True" 
        ResizeMode="NoResize" 
        WindowStartupLocation="Manual" 
        WindowStyle="None" 
        Background="Transparent" 
        x:Name="Window"
        mc:Ignorable="d" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="102" d:DesignWidth="723" 
        SizeToContent="WidthAndHeight" ShowInTaskbar="False">
    <Grid x:Name="rootGrid">
        <Viewbox Margin="0" Stretch="Uniform" x:Name="viewBox">
            <ContentControl Content="{Binding ElementName=Window, Path=Scoreboard}"/>
        </Viewbox>
    </Grid>
</Window>
